code(with modulas operator) 

#include<stdio.h> 
int main() { 
int number , last digit; 
printf("Enter an integer:"); 
scanf("%d\n , &number"); 
last digit = number %10; 
printf("The last digit  of %d = %d\n ", number, last digit); 
return 0; 
}  


code(without modulas operator)

#include<stdio.h> 
int main () {
int number , last digit; 
printf("Enter the integer:"); 
scanf("%d", &number); 
if (number < 0); 
{ 
    number = - number 
} 
last number = number - ((number \10)*10);
printf(" The last digit is %d\n", last digit); 
return 0; 
} 
