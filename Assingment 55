#include <stdio.h>
#include <string.h>

int main() {
    char str1[100], str2[100], str3[200];
    int length, cmp;

    // Input the first string
    printf("Enter the first string: ");
    gets(str1); // Note: gets() is unsafe, use fgets() in real applications

    // 1️⃣ Find the length of the string
    length = strlen(str1);
    printf("Length of the string = %d\n", length);

    // 2️⃣ Copy string into another
    strcpy(str2, str1);
    printf("Copied string = %s\n", str2);

    // 3️⃣ Compare both strings
    cmp = strcmp(str1, str2);
    if(cmp == 0)
        printf("Both strings are equal.\n");
    else
        printf("Strings are not equal.\n");

    // 4️⃣ Concatenate the strings
    strcpy(str3, str1);    // copy first string into str3
    strcat(str3, str2);    // append second string
    printf("Concatenated string = %s\n", str3);

    return 0;
}